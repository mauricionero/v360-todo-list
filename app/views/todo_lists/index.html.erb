<p id="notice"><%= notice %></p>

<h1>Todo Lists</h1>

<table class="fl-table">
  <thead>
    <tr>
      <th>Title</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @todo_lists.each do |todo_list| %>
      <tr>
        <td title="<%= todo_list.description %>">
          <span style="background-color: <%= todo_list.color %>" class="dot"></span>
          <%= link_to todo_list.title, todo_list %>
        </td>
        <td>
          <%= link_to '✏️', edit_todo_list_path(todo_list) %>
          <%= link_to '🗑️', todo_list, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '➕ New Todo List', new_todo_list_path %>
